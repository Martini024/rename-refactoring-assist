<!-- Plugin Configuration File. Read more:
https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>edu.colorado.rrassist</id>
    <name>Rename Refactoring Assist</name>
    <vendor>martini024</vendor>

    <depends>com.intellij.modules.platform</depends>
    <!-- Require Java language (PSI) -->
    <depends>com.intellij.modules.java</depends>
    <!-- If you reference org.jetbrains.kotlin.psi.* anywhere -->
    <depends>org.jetbrains.kotlin</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            id="Rename Suggestions"
            anchor="right"
            factoryClass="edu.colorado.rrassist.toolWindow.RenameSuggestionsToolWindowFactory"
            icon="AllIcons.Actions.RefactoringBulb" />
        <postStartupActivity
            implementation="edu.colorado.rrassist.startup.MyProjectActivity" />
        <notificationGroup
                id="RRAssist"
                isLogByDefault="true"
                displayType="BALLOON"/>
        <applicationConfigurable
            instance="edu.colorado.rrassist.settings.RRAssistConfigurable"
            id="rrassist.settings"
            displayName="RRAssist / LLM">
        </applicationConfigurable>
    </extensions>
    <actions>
        <action id="edu.colorado.rrassist.actions.RenameLocalVariableAction"
                class="edu.colorado.rrassist.actions.RenameLocalVariableAction" text="Rename Variable"
                description="Rename the selected local variable with RR-Assist">
            <add-to-group group-id="RefactoringMenu" anchor="after" relative-to-action="RenameElement"/>
        </action>
    </actions>
</idea-plugin>